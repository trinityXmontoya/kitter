<%= javascript_include_tag 'sessions/login' %>

<div id="login_wrapper">
    <h1>Login</h1>

    <div class="errors">
    <%= flash[:notice] %>
    </div>


  <div id="sign-up">
    <div class="sign-up-directions">
      Enter your username or email!!
    </div>

    <div id="sign-up-form">
      <%= form_tag request_token_path(user_id: 0), id:'login-form' do %>
        <%= text_field_tag :user_id %>
      <% end %>
    </div>
  </div>
</div>
