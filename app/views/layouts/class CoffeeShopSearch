class CoffeeShopSearch
  CLIENT = Yelp::Client.new({
    consumer_key: ENV['YELP_CONSUMER_KEY'],
    consumer_secret: ENV['YELP_CONSUMER_SECRET'],
    token: ENV['YELP_TOKEN'],
    token_secret: ENV['YELP_TOKEN_SECRET']
  })

  CHAINS = ['Starbucks', 'Dunkin Donuts', 'Panera', 'McDonalds',
    'Caribou Coffee', 'Peet\'s Coffee', 'Honey Dew Donuts']

    attr_accessor :location

  # def initialize
  #  @location = location
  # end
# CoffeeShopSearch.new.search('boston')
# CoffeeShopSearch.new('boston').search


  def search
    #search_results is a hash
    search_results = CLIENT.search('New York', term: 'food',
      category_filter: 'coffee').businesses

    local_coffee_shops = search_results.reject { |a| CHAINS.include?(a.name) }

  end


end

reject works differently on a hash.

search_results.reject {|key,value| CHAINS.include?(key.name)}
