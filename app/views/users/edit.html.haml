%h1 Edit User

= javascript_include_tag 'users/edit'

- if flash[:notice]
  = flash[:notice]

%div
- if @user.errors.present?
  - @user.errors.full_messages.each do |msg|
    = msg
    %br


= form_for @user do |f|

  %div.form-group
  = f.label :email
  = f.text_field :email, type: 'email'

  %div.form-group
  = f.label :name
  = f.text_field :name

  %div.form-group
  = f.label :username
  = f.text_field :username

  %div.form-group
  = f.label :background_photo_url
  = image_tag @user.background_photo_url, width: '200'
  = f.text_field :background_photo_url, type: 'url'


  %div.form-group
  = f.label :profile_photo_url
  = image_tag @user.profile_photo_url, width: '200'
  = f.text_field :profile_photo_url, type: 'url'


  %div.form-group
  = f.label :bio
  = f.text_field :bio


  %div.form-group
  = f.label :website
  = f.text_field :website, type: 'url'


  %div.form-group
  = f.label :location
  = f.text_field :location

  %br
  = f.submit

%hr

  %div
    = button_to "Delete Account", @user, method: :delete
    %h5 If you delete your account you will not be able to recover it and all tweets will be deleted


%script{src: :"//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.11.1/jquery.validate.min.js"}
