<h3>Followers</h3>

<% @followers.each do |follower| %>

  <img src="<%= follower.profile_photo_url%>" alt="" />
  <%= link_to follower do %>
  <%= follower.name %>
  <%= "@#{follower.username}" %>
  <% end %>
  <%= follower.bio %>

  <%= form_tag user_block_path(follower) do %>
  <%= submit_tag "Block" %>
  <% end %>

  <% if current_user.followees.include?(follower) %>
    <%= form_tag user_unfollow_path(follower) do %>
    <%= submit_tag "Unfollow" %>
    <% end %>
  <% else %>
    <%= form_tag user_follow_path(follower) do  %>
    <%= submit_tag "Follow" %>
    <% end %>
  <% end %>

<% end %>
