<%= javascript_include_tag 'users/sign_up' %>
<script src='http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js'></script>
<h1>Sign Up</h1>

<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<br>

<% if @user.errors.present? %>
  <% @user.errors.full_messages.each do |msg|  %>
    <%= msg %>
  <% end %>
<% end %>

<div id="signup-form">
    <%= form_for @user do |f|%>
  <div id="signup-step-1"xp>
    This is the only information we require for you to signup, no passwords necessary! Read more about our <%= link_to "passwordless login process here.", faq_path %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>

    <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, type: 'email' %>
    </div>

    <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
    </div>

    <div id="signup-continue" class='btn'>Continue</div>
  </div><!-- end signup step 1-->

  <div id="signup-step-2" class='hide-me'>

    <span id='entered-username'></span>

    <div class="form-group">
    <%= f.label :background_photo_url %>
    <p>If you don't choose one, this will be your default:</p>
    <%= image_tag @user.background_photo_url, width: '200' %>
    <%= f.text_field :background_photo_url, type: 'url' %>
    </div>

    <div class="form-group">
    <%= f.label :profile_photo_url %>
    <p>If you don't choose one, this will be your default:</p>
    <%= image_tag @user.profile_photo_url, width: '200' %>
    <%= f.text_field :profile_photo_url, type: 'url' %>
    </div>

    <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    </div>

    <div class="form-group">
    <%= f.label :website %>
    <%= f.text_field :website, type: 'url' %>
    </div>

    <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location %>
    </div>

    <div class="form-group">
    <%= f.label :country_id %>
    <%= f.number_field :country_id %>
    </div>

    <div id='signup-back' class="btn">Back</div>
    <%= f.submit %>
  </div><!-- end signup step 2-->
  <% end %>
</div><!-- end signup form-->

