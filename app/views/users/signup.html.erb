<%= javascript_include_tag 'users/sign_up' %>

<h1>Sign Up</h1>

<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<br>

<div>
<% if @user.errors.present? %>
  <% @user.errors.full_messages.each do |msg|  %>
    <%= msg %>
    <br>
  <% end %>
<% end %>
</div>

<div id="signup-form">
    <%= form_for @user do |f|%>
  <div id="signup-step-1"xp>
    This is the only information we require for you to signup, no passwords necessary! <br> Read more about our <%= link_to "passwordless login process here.", faq_path %>
    <br>
    <div class="form-group input-group">
    <%= f.text_field :email, type: 'email', class: 'form-control', placeholder: "Email" %>
    </div>

    <div class="form-group input-group">
    <%= f.text_field :name, type: 'text', class: 'form-control', placeholder: "Name" %>
    </div>

    <div class="form-group input-group">
    <%= f.text_field :username, type: 'text', class: 'form-control', placeholder: "Username" %>
    </div>

    <div id="signup-continue" class='btn'>Continue</div>
  </div><!-- end signup step 1-->

  <div id="signup-step-2" class='hide-me'>

    <span id='entered-username'></span>

    <div class="form-group">
    <%= f.label :background_photo_url %>
    <p>If you don't choose one, this will be your default:</p>
    <%= image_tag @user.background_photo_url, width: '100', height: '100'  %>
    <%= f.text_field :background_photo_url, type: 'url' %>
    </div>

    <div class="form-group">
    <%= f.label :profile_photo_url %>
    <p>If you don't choose one, this will be your default:</p>
    <%= image_tag @user.profile_photo_url, width: '100', height: '100' %>
    <%= f.text_field :profile_photo_url, type: 'url' %>
    </div>
    <br>
    <div class="form-group input-group">
    <%= f.text_field :bio, type: 'text', class: 'form-control', placeholder: "Bio (optional)" %>
    </div>

    <div class="form-group input-group">
    <%= f.text_field :website, type: 'url', class: 'form-control', placeholder: "Website (optional)" %>
    </div>

   <div class="form-group input-group">
    <%= f.text_field :location, type: 'text', class: 'form-control', placeholder: "Location (optional)" %>
    </div>

   <!--  <div class="form-group">
    <#%= f.label :country_id %>
    <#%= f.number_field :country_id %>
    </div> -->

    <div id='signup-back' class="btn">Back</div>
    <%= f.submit class: 'btn' %>
  </div><!-- end signup step 2-->
  <% end %>
</div><!-- end signup form-->
