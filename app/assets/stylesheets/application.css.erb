/*GENERAL STYLES*/
  body {
    font-family: Helvetica;
    background-image: url('<%= asset_path("subtlepatterns-greendust.png") %>')
  }

  a {
    text-decoration: none;
    font-family: Helvetica;
    color: #ce6f56;
  }

  a:hover {
    text-decoration: none;
    opacity: .8;
  }

  hr {
    margin: 0;
  }

  input {
    border-radius: 3px;
    border: 1px solid #ccd6dd;
    padding: 3px;
    font-size: 13px;
  }

  textarea {
    resize: none;
  }

  [contenteditable]:focus { outline: 0px solid transparent; }

/*GENERAL CLASSES*/
  .display-me {
    display: block !important ;
  }

  .hide-me {
    display: none;
  }

  .text-over-limit {
    color: red;
  }

  .error {
    color: #c33;
    font-weight: normal;
    font-size: 13px;
  }
  .error::before {
    content: "\f00d  ";
    font-family: FontAwesome;
    font-style: normal;
    font-weight: normal;
    text-decoration: inherit;
  }

  .top-buffer { margin-top:20px; }

  .navbar {
    height: 46px;
    margin-bottom: 0;
  }

  .container-fluid {
    padding-top: 25px;
  }

/*JOIN.HTML*/

  #front-welcome {
    color: whitesmoke;
  }
    #front-welcome p {
      font-size: 21px;
    }
    #front-welcome h1 {
    font-weight: bold;
    }

  #login {
    background-color: whitesmoke;
  }
    #login form button {
      background-color: #a9d8cb;
      border: 1px solid #B6BBBA;
      padding: 4px;
      color: whitesmoke;
    }

  #front-card > div {
    border-radius: 5px;
    width: 310px;
    padding: 10px 0px 9px 10px;
    margin: 12px;
  }


  #signup {
    background-color: whitesmoke;
  }
    #signup form {
      padding: 0 10px 0 0;
    }
      #signup form input.btn {
        background-color: #ce6f56;
      }

/*SIGN UP */
  .tweet-modal form {
    padding: 50px;
  }

/*LEFT SIDEBAR*/

.left-sidebar-top {
  padding: 7px;
}
  .left-sidebar-top i {
    float: right;
  }
